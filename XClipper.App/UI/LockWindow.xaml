<Window x:Class="Components.UI.LockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Components.UI"
        mc:Ignorable="d"
        Title="Unlock XClipper" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="{DynamicResource BackgroundBrush}">
    <Border BorderBrush="{DynamicResource AccentBrush}" BorderThickness="1">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="XClipper is Locked" 
                       Foreground="{DynamicResource ForegroundBrush}"
                       FontSize="24" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>
            
            <PasswordBox x:Name="PinBox"
                         Width="200"
                         Height="30"
                         Margin="0,0,0,20"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         KeyDown="PinBox_KeyDown"/>

            <Button x:Name="UnlockButton"
                    Content="Unlock with Windows Hello"
                    Padding="10,5"
                    Click="UnlockButton_Click"
                    Background="{DynamicResource PinnedBrush}"
                    Foreground="White"/>
            
            <TextBlock x:Name="StatusText" 
                       Text="" 
                       Foreground="{DynamicResource ErrorBrush}"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
